{
    "manifest_version": 2,
    "name": "HTTP Status Code",
    "description": "Shows HTTP response status code as a badge icon.",
    "version": "1.0.2",
    "homepage_url": "https://github.com/amad/firefox-status-code",
    "icons": {
        "48": "icon.svg",
        "96": "icon.svg"
    },
    "browser_action": {
        "default_icon": {
            "16": "icon.svg",
            "32": "icon.svg"
        }
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "webNavigation",
        "webRequest"
    ],
    "background": {
        "scripts": [
            "index.js"
        ]
    },
    "page_action": {
        "browser_style": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ]
}
